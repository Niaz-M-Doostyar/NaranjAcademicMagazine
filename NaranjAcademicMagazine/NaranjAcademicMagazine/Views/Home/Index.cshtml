                        {

                            if (u == 0)
                            {
                                ++u;*@
                                <div class="item active">
                                    <div class="card">
                                        <div class="row g-0">
                                            <div class="col-md-9">
                                                <img src="~/Content/images/naranj.jpg" style="width: 100%; height: 340px;">
                                            </div>
                                            <div class="col-md-3">
                                                <div class="card-body">
                                                    <h4 class="card-title" style="font-weight:bold">Naranj Academic and Scientific Journal of Natural and Medical Sciences</h4>
                                                    <p class="card-text">This journal is about Sience, Technology and other different issues.</p>
                                                    <p class="card-text"><small class="text-body-secondary">by Kandahar University</small></p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            @*}
                            else
                            {*@
                                <div class="item">
                                    <div class="card">
