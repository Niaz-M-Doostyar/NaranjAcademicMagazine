@model System.Data.DataTable
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainPageLayout.cshtml";
}

<section class="hero-wrap hero-wrap-2" style="background-image: url('/Content/images/bg_5.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate mb-0 text-center">
                <p class="breadcrumbs mb-0"><span class="mr-2"><a href=@Url.Action("Index", "Home")>Home <i class="fa fa-chevron-right"></i></a></span> <span>Editorial Board <i class="fa fa-chevron-right"></i></span></p>
                <h1 class="mb-0 bread">Editorial Board</h1>
            </div>
        </div>
    </div>
</section>
<section class="ftco-section">
    <div class="container">
        <h2 style="text-align:center; font-weight:bold; margin-top:30px;">Board Members</h2><br />
        <div class="row">
            @for (int i = 0; i < Model.Rows.Count; i++)
            {
            <div class="col-md-6 col-lg-3 ftco-animate">
                <div class="staff">
                    <div class="img-wrap d-flex align-items-stretch">
                        @{
                            string src = "~/Areas/Admin/UploadedFiles/" + @Model.Rows[i][7];
                        }
                        <div class="img align-self-stretch" style="background-image: url(@Url.Content(src));"></div>
                    </div>
                    <div class="text pt-3 px-3 pb-4 text-center">
                        <h4>@Model.Rows[i][1]</h4>
                        <div class="faded">
                            <p>@Model.Rows[i][2]</p>
                            <p>Phone: @Model.Rows[i][8]</p>
                            <a href="#" class="btn btn-primary">View All Books</a>
                            <ul class="ftco-social text-center">
                                <li class="ftco-animate"><a href="#" class="d-flex align-items-center justify-content-center"><span class="fa fa-twitter"></span></a></li>
                                <li class="ftco-animate"><a href="#" class="d-flex align-items-center justify-content-center"><span class="fa fa-facebook"></span></a></li>
                                <li class="ftco-animate"><a href="mailto:@Model.Rows[i][3]" class="d-flex align-items-center justify-content-center"><span class="fa fa-google"></span></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
             }

        </div>
    </div>
</section>


