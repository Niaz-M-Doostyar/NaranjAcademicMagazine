@model NaranjAcademicMagazine.Areas.Admin.Models.Slider
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_MainPageLayout.cshtml";
}

<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href=@Url.Action("Index","Home")><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href=@Url.Action("Index","Slider")>Slider</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Add</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid mt--6">
    <div class="row">
        <div class="col">
            <div class="card">
                <!-- Add Slider -->
                <div class="card-header border-0">
                    <h3 class="mb-0" style="text-align:center; font-size: 24px;">Add Slider Details</h3>
                </div>
                <!-- Add Slider -->
                <div class="formContainer">
                    @using (Html.BeginForm("Create", "Slider", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div>
                            <label for="header">Header</label>
                            <input type="text" id="header" name="header" />
                            <label for="body">Body</label>
                            <input type="text" id="body" name="body" rows="50" cols="50" />
                            <label for="image">Image</label>
                            <input type="file" id="image" name="image"/>
                        </div>
                        <input type="submit" value="Submit" />
                    }
                </div>

            </div>
        </div>
    </div>

