@model NaranjAcademicMagazine.Areas.Admin.Models.Issue

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_MainPageLayout.cshtml";
}
<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href=@Url.Action("Index","Home")><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href=@Url.Action("Homepage","Home")>Homepage</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Add</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page content -->
<div class="container-fluid mt--6">
    <div class="row">
        <div class="col">
            <div class="card">
                <!-- Add Issue -->
                <div class="card-header border-0">
                    <h3 class="mb-0" style="text-align:center; font-size: 24px;">Add Issue</h3>
                </div>
                <!-- Add Issue -->
                <div class="formContainer">
                    @using (Html.BeginForm("Create", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                    <div>
                        <label for="volume">Volume</label>
                        <input type="text" id="volume" name="volume" />
                        <label for="issue">Issue</label>
                        <input type="text" id="issue" name="issue" />
                        <label for="year">Date</label>
                        <input type="date" id="year" name="year" />
                        <label for="image">Image</label>
                        <input type="file" id="image" name="image" />
                    </div>
                            <input type="submit" value="Submit" />
                    }
                </div>

            </div>
        </div>
    </div>


