@model System.Data.DataTable
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_MainPageLayout.cshtml";
}
<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href=@Url.Action("Index","Home")><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href=@Url.Action("Index","Issues")>Issues</a></li>
                            <li class="breadcrumb-item active" aria-current="page">List</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-lg-6 col-5 text-right">
                    <a href=@Url.Action("Create","Issues") class="btn btn-sm btn-neutral">Add</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page content -->
<div class="container-fluid mt--6">
    <div class="row">
        <div class="col">
            <div class="card">
                <!-- Card header -->
                <div class="card-header border-0">
                    <h3 class="mb-0">List of Issues</h3>
                </div>
                <!-- Light table -->
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col" class="sort" data-sort="TopicID">Topic ID</th>
                                <th scope="col" class="sort" data-sort="Title">Title</th>
                                <th scope="col" class="sort" data-sort="Abstract">Abstract</th>
                                <th scope="col" class="sort" data-sort="Author1">Author 1</th>
                                <th scope="col" class="sort" data-sort="Designation1">Designation 1</th>
                                <th scope="col" class="sort" data-sort="Author2">Author 2</th>
                                <th scope="col" class="sort" data-sort="Designation2">Designation 2</th>
                                <th scope="col" class="sort" data-sort="Page">Page</th>
                                <th scope="col" class="sort" data-sort="Views">Views</th>
                                <th scope="col" class="sort" data-sort="Volume">Volume</th>
                                <th scope="col" class="sort" data-sort="Issue">Issue</th>
                                <th scope="col" class="sort" data-sort="Year">Date</th>
                                <th scope="col" class="sort" data-sort="File">File</th>
                                <th scope="col" class="sort" data-sort="Image">Image</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody class="list">
                            @for (int i = 0; i < Model.Rows.Count; i++)
                            {
                            <tr>
                                <td>
                                    @Model.Rows[i][0]

                                </td>
                                <td>
                                    @Model.Rows[i][1]
                                </td>
                                <td>
                                    @Model.Rows[i][2]
                                </td>
                                <td>
                                    @Model.Rows[i][3]
                                </td>
                                <td>
                                    @Model.Rows[i][4]
                                </td>
                                <td>
                                    @Model.Rows[i][5]
                                </td>
                                <td>
                                    @Model.Rows[i][6]
                                </td>
                                <td>
                                    @Model.Rows[i][7]
                                </td>
                                <td>
                                    @Model.Rows[i][8]
                                </td>
                                <td>
                                    @Model.Rows[i][9]
                                </td>
                                <td>
                                    @Model.Rows[i][10]
                                </td>
                                <td>
                                    @Model.Rows[i][11]
                                </td>
                                <td>
                                    @{
                                        string src = "~/Areas/Admin/UploadedFiles/" + @Model.Rows[i][12];
                                    }
                                    <a href=@Url.Content(src) target="_blank">@Model.Rows[i][12]</a>
                                </td>
                                <td>
                                    @{
                                        string src1 = "~/Areas/Admin/UploadedFiles/" + @Model.Rows[i][13];
                                    }
                                    <img src="@Url.Content(src1)" width="40" height="40" />
                                </td>
                                <td class="text-right">
                                    <div class="dropdown">
                                        <a class="btn btn-sm btn-icon-only text-light" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="fas fa-ellipsis-v"></i>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                                            <a class="dropdown-item" href=@Url.Action("Edit", "Issues", new { @id=@Model.Rows[i][0] })>Edit</a>
                                            <a class="dropdown-item" href=@Url.Action("Delete", "Issues", new { @id=@Model.Rows[i][0] })>Delete</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- Card footer -->
                <div class="card-footer py-4">
                    <nav aria-label="...">
                        <ul class="pagination justify-content-end mb-0">
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1">
                                    <i class="fas fa-angle-left"></i>
                                    <span class="sr-only">Previous</span>
                                </a>
                            </li>
                            <li class="page-item active">
                                <a class="page-link" href="#">1</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
                            </li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">
                                    <i class="fas fa-angle-right"></i>
                                    <span class="sr-only">Next</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>





