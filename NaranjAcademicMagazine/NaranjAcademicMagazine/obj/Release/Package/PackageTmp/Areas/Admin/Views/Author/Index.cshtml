@model System.Data.DataTable
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_MainPageLayout.cshtml";
}
<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href=@Url.Action("Index","Home")><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href=@Url.Action("Index","Author")>Authors</a></li>
                            <li class="breadcrumb-item active" aria-current="page">List</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-lg-6 col-5 text-right">
                    <a href=@Url.Action("Create","Author") class="btn btn-sm btn-neutral">Add</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page content -->
<div class="container-fluid mt--6">
    <div class="row">
        <div class="col">
            <div class="card">
                <!-- Card header -->
                <div class="card-header border-0">
                    <h3 class="mb-0">List of Authors</h3>
                </div>
                <!-- Light table -->
                <div class="table-responsive">
                    <table class="table align-items-center table-flush" style="margin-bottom:20px;">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col" class="sort" data-sort="AuthorId">Author ID</th>
                                <th scope="col" class="sort" data-sort="Name">Name</th>
                                <th scope="col" class="sort" data-sort="Description">Description</th>
                                <th scope="col" class="sort" data-sort="Email">Email</th>
                                <th scope="col" class="sort" data-sort="Phone">Phone</th>
                                <th scope="col" class="sort" data-sort="Facebook">Facebook</th>
                                <th scope="col" class="sort" data-sort="LinkedIn">LinkedIn</th>
                                <th scope="col" class="sort" data-sort="Twitter">Twitter</th>
                                <th scope="col" class="sort" data-sort="Twitter">Image</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody class="list">
                            @for (int i = 0; i < Model.Rows.Count; i++)
                            {
                                <tr>
                                    <td>
                                        @Model.Rows[i][0]

                                    </td>
                                    <td>
                                        @Model.Rows[i][1]

                                    </td>
                                    <td>
                                        @Model.Rows[i][2]
                                    </td>
                                    <td>
                                        @Model.Rows[i][3]
                                    </td>
                                    <td>
                                        @Model.Rows[i][8]
                                    </td>
                                    <td>
                                        @Model.Rows[i][4]
                                    </td>
                                    <td>
                                        @Model.Rows[i][5]
                                    </td>
                                    <td>
                                        @Model.Rows[i][7]
                                    </td>
                                    <td>
                                        @{
                                            string src = "~/Areas/Admin/UploadedFiles/" + @Model.Rows[i][6];
                                        }
                                        <img src="@Url.Content(src)" width="100" height="100" />
                                    </td>
                                    <td class="text-right">
                                        <div class="dropdown">
                                            <a class="btn btn-sm btn-icon-only text-light" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <i class="fas fa-ellipsis-v"></i>
                                            </a>
                                            <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                                                <a class="dropdown-item" href=@Url.Action("Edit", "Author", new { @id=@Model.Rows[i][0] })>Edit</a>
                                                <a class="dropdown-item" href=@Url.Action("Delete", "Author", new { @id=@Model.Rows[i][0] })>Delete</a>
                                                <a class="dropdown-item" href=@Url.Action("List", "Author", new { @id=@Model.Rows[i][0] })>View</a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                            </tbody>
                    </table>
                </div>
                <!-- Card footer -->
                <div class="card-footer py-4">
                    <nav aria-label="...">
                        <ul class="pagination justify-content-end mb-0">
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1">
                                    <i class="fas fa-angle-left"></i>
                                    <span class="sr-only">Previous</span>
                                </a>
                            </li>
                            <li class="page-item active">
                                <a class="page-link" href="#">1</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
                            </li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">
                                    <i class="fas fa-angle-right"></i>
                                    <span class="sr-only">Next</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>

